{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["phase", "files", "notes", "evidence"],
  "properties": {
    "phase": { "const": "implement" },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["path", "action", "content"],
        "properties": {
          "path": { "type": "string", "minLength": 1 },
          "action": { "enum": ["create", "modify", "delete"] },
          "content": { "type": "string", "description": "Full file content for create/modify, empty for delete" }
        }
      }
    },
    "notes": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["kind", "ref", "note"],
        "properties": {
          "kind": { "enum": ["file", "command_output"] },
          "ref": { "type": "string", "minLength": 1 },
          "note": { "type": "string", "minLength": 1 }
        }
      }
    },
    "narration": { "type": "string" }
  }
}
